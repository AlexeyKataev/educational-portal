@{
	ViewData["Title"] = "Добавить группу или подгруппу";	
    Layout = "~/Views/StudyGroup/_StudyGroupLayout.cshtml";
}

@model Dotnet.ViewModels.StudyGroup.StudyViewModel

<div class="col-sm-4">
	<ul class="list-group mb-4">
		<div class="list-group-item">Приложение</div>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Admin" asp-action="Users">
			<i class="bi bi-gear-wide-connected mr-2"></i>Настройки приложения
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Admin" asp-action="Users">
			<i class="bi bi-arrow-repeat mr-2"></i>Резервное копирование
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Admin" asp-action="Users">
			<i class="bi bi-card-list mr-2"></i>Сводка
		</a>
	</ul>
	<ul class="list-group mb-4">
		<div class="list-group-item">Пользователи</div>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="" asp-action="">
			<i class="bi bi-person-plus-fill mr-2"></i>Добавить пользователя
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Admin" asp-action="Users">
			<i class="bi bi-person-lines-fill mr-2"></i>Список пользователей
		</a>
	</ul>
	<ul class="list-group mb-4">
		<div class="list-group-item">Преподаватели</div>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="AddTeacher">
			<i class="bi bi-person-plus-fill mr-2"></i>Добавить преподавателя	
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="Teachers">	
			<i class="bi bi-person-lines-fill mr-2"></i>Список преподавателей
		</a>
	</ul>
	<ul class="list-group mb-4">
		<div class="list-group-item">Учебные группы</div>
		<a class="list-group-item list-group-item-action active" asp-area="" asp-controller="Teacher" asp-action="AddTeacher">
			<i class="bi bi-plus-circle mr-2"></i>Добавить группу или подгруппу	
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="Teachers">	
			<i class="bi bi-people mr-2"></i>Список групп
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="Teachers">	
			<i class="bi bi-people mr-2"></i>Список подгрупп
		</a>
	</ul>
	<ul class="list-group mb-4">
		<div class="list-group-item">Учебные предметы</div>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="AddTeacher">
			<i class="bi bi-plus-circle mr-2"></i>Добавить учебный предмет	
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="Teachers">	
			<i class="bi bi-list-ul mr-2"></i>Список учебных предметов
		</a>
	</ul>
	<ul class="list-group mb-4">
		<div class="list-group-item">Специальности</div>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="AddTeacher">
			<i class="bi bi-plus-circle mr-2"></i>Добавить специальность	
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="Teachers">	
			<i class="bi bi-list-ul mr-2"></i>Список специальностей
		</a>
	</ul>
	<ul class="list-group mb-4">
		<div class="list-group-item">Формы обучения</div>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="AddTeacher">
			<i class="bi bi-plus-circle mr-2"></i>Добавить форму обучения	
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="Teachers">	
			<i class="bi bi-list-ul mr-2"></i>Список форм обучения
		</a>
	</ul>
	<ul class="list-group mb-4">
		<div class="list-group-item">Виды работ</div>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="AddTeacher">
			<i class="bi bi-plus-circle mr-2"></i>Добавить вид работы
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Teacher" asp-action="Teachers">	
			<i class="bi bi-list-ul mr-2"></i>Список видов работ
		</a>
	</ul>
</div>
<div class="col-sm-8">
	<div class="shadow-sm card p-3 mb-2 bg-white rounded">
		Добавление учебной группы
	</div>
	<form asp-action="CreateStudyGroup" asp-controller="StudyGroup" asp-anti-forgery="true">
		<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show pl-3 pr-3 pt-3 pb-0" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div>
			<div class="form-group">
				<label asp-for="StudyGroupViewModel.Name">Название <span>*</span></label>
				<input type="text" asp-for="StudyGroupViewModel.Name" class="form-control" />
				<span asp-validation-for="StudyGroupViewModel.Name" />
			</div>
			<div class="form-group">
				<label asp-for="StudyGroupViewModel.Code">Код</label>
				<input type="text" asp-for="StudyGroupViewModel.Code" class="form-control" />
				<span asp-validation-for="StudyGroupViewModel.Code" />
			</div>
			<div class="form-group">
				<label asp-for="StudyGroupViewModel.SpecialtyId">Специальность <span>*</span></label>
				<input type="text" asp-for="StudyGroupViewModel.SpecialtyId" class="form-control" />
				<span asp-validation-for="StudyGroupViewModel.SpecialtyId" />
			</div>
			<div class="form-group">
				<label asp-for="StudyGroupViewModel.FormEducationId">Форма обучения <span>*</span></label>
				<input type="text" asp-for="StudyGroupViewModel.FormEducationId" class="form-control" />
				<span asp-validation-for="StudyGroupViewModel.FormEducationId" />
			</div>
			<div class="form-group">
				<label asp-for="StudyGroupViewModel.DateStart">Дата начала обучения <span>*</span></label>
				<input type="date" asp-for="StudyGroupViewModel.DateStart" class="form-control" />
				<span asp-validation-for="StudyGroupViewModel.DateStart" />
			</div>
			<div class="form-group">
				<label asp-for="StudyGroupViewModel.DateEnd">Дата окончания обучения <span>*</span></label>
				<input type="date" asp-for="StudyGroupViewModel.DateEnd" class="form-control" />
				<span asp-validation-for="StudyGroupViewModel.DateEnd" />
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">
					<i class="bi bi-plus-circle mr-2"></i>Добавить группу
				</button>
			</div>
		</div>
	</form>
	<div class="shadow-sm card p-3 mt-4 mb-2 bg-white rounded">
		Добавление учебной подгруппы
	</div>
	<form asp-action="CreateStudySubgroup" asp-controller="StudyGroup" asp-anti-forgery="true">
		<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show pl-3 pr-3 pt-3 pb-0" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div>
			<div class="form-group">
				<label asp-for="StudySubgroupViewModel.StudyGroupId">ID учебной группы <span>*</span></label>
				<input type="text" asp-for="StudySubgroupViewModel.StudyGroupId" class="form-control" />
				<span asp-validation-for="StudySubgroupViewModel.StudyGroupId" />
			</div>
			<div class="form-group">
				<label asp-for="StudySubgroupViewModel.Name">Название <span>*</span></label>
				<input type="text" asp-for="StudySubgroupViewModel.Name" class="form-control" />
				<span asp-validation-for="StudySubgroupViewModel.Name" />
			</div>
			<div class="form-group">
				<label asp-for="StudySubgroupViewModel.Code">Код</label>
				<input type="text" asp-for="StudySubgroupViewModel.Code" class="form-control" />
				<span asp-validation-for="StudySubgroupViewModel.Code" />
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">
					<i class="bi bi-plus-circle mr-2"></i>Добавить подгруппу
				</button>
			</div>
		</div>
	</form>
</div>