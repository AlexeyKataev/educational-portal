@{
	ViewData["Title"] = "Авторизация";
}

@model Dotnet.ViewModels.LoginModel
 
<h2 class="display-4 mb-4">Вход на сайт</h2>
 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
	<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show p-3" style="* ul {margin-bottom: 0;}" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Введите имя учётной записи или E-Mail</label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
	<a asp-action="Register" asp-controller="Account">Регистрация</a>
</div>
<div>
	<a asp-action="Recovery" asp-controller="Account">Восстановить пароль</a>
</div>


