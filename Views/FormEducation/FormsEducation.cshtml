@{
	ViewData["Title"] = "Формы обучения";	
    Layout = "~/Views/FormEducation/_FormEducationLayout.cshtml";
}

<div class="flex-grow-1">
	<ul class="list-group list-group-horizontal mb-4">
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Home" asp-action="Index">
			<i class="bi bi-back mr-2"></i>Назад
		</a>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="FormEducation" asp-action="AddFormEducation">
			<i class="bi bi-plus-circle mr-2"></i> Добавить форму обучения
		</a>
	</ul>
</div>
<div>
	@foreach (var fE in ViewBag.allFormsEducation)
	{
		<div class="card mb-2">
			<div class="card-body overflow-auto">
				<h6 class="card-title ">@fE.Name</h6>
				<table class="table table-sm table-hover mb-0">
					<thead>
						<tr class="text-align-top">
							<td scope="col">ID</td>
							<td scope="col">Код</td>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>@fE.Id</td>
							<td>@fE.Code</td>
						</tr>
					</tbody>
				</table>
				@if (User.IsInRole("admin"))
				{
					<a class="btn btn-sm btn-light btn-block" asp-action="EditFormEducation" asp-route-formEducationId="@fE.Id">
						<i class="bi bi-pencil-square mr-2"></i>Редактировать
					</a>
				}
			</div>
		</div>
	}
</div>