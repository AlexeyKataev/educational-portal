@{
	ViewData["Title"] = "Добавить форму обучения";	
    Layout = "~/Views/FormEducation/_FormEducationLayout.cshtml";
}

@model Dotnet.ViewModels.FormEducationViewModel

<div class="col-sm-4">
	<ul class="list-group mb-4">
		<div class="list-group-item">Навигация</div>
		<a class="list-group-item list-group-item-action" asp-area="" asp-controller="Admin" asp-action="Users">
			Навигационное меню
		</a>
	</ul>
</div>
<div class="col-sm-8">
	<form asp-action="CreateFormEducation" asp-controller="FormEducation" asp-anti-forgery="true">
		<div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show pl-3 pr-3 pt-3 pb-0" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div>
			<div class="form-group">
				<label asp-for="Name">Название <span>*</span></label>
				<input type="text" asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" />
			</div>
			<div class="form-group">
				<label asp-for="Code">Код <span>*</span></label>
				<input type="text" asp-for="Code" class="form-control" />
				<span asp-validation-for="Code" />
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">
					<i class="bi bi-plus-circle mr-2"></i>Добавить форму обучения
				</button>
			</div>
		</div>
	</form>
</div>